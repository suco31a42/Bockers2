<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>グループ名</th>
      <th>紹介文</th>
      <th>メンバー</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% group.each do |group| %>
      <tr>
        <td><%= image_tag group.get_group_image, size: '50x50' %></td>
        <th><%= link_to group.name,group_path(group) %></th>
        <td><%= group.introduction %></td>
        <td>
          <% group.users.each do |user| %>
            <li style="list-style: none;"><%= user.name %></li>
          <% end %>
        </td>
        <% if group.owner_id == current_user.id %>
          <td><%= link_to "Edit", edit_group_path(group), class:"btn btn-sm btn-success" %></td>
          <td><%= link_to "Destroy", group_path(group), method: :delete, class:"btn btn-sm btn-danger","data-confirm" => "本当に削除しますか？" %></td>
        <% else %>
          <td></td>
          <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>