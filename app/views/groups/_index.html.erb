<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>グループ名</th>
      <th>紹介文</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% group_lists.each do |list| %>
      <tr>
        <td><%= link_to(list) do %>
          <%= image_tag list.get_group_image(60,60) %>
          <% end %>
        </td>
        <th><%= link_to list.name,list %></th>
        <td><%= list.introduction %></td>
        <% if list.user_ids.include?(current_user.id) %>
          <td><%= link_to "Edit", edit_list_path(list.id), class:"btn btn-sm btn-success" %></td>
          <td><%= link_to "Destroy", list_path(list.id), class:"btn btn-sm btn-danger", method: :destroy %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>