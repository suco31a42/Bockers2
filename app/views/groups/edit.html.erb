<div class="container">
  <div class="row">
    <div class="col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <%= render 'layouts/errors', obj: @group %>
      <h1>Create Group</h1>
      <%= form_with model: @group do |f| %>
        <div class="form-group">
          <%= f.label :グループ名 %>
          <%= f.text_field :name, class:'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :紹介文 %>
          <%= f.text_area :introduction, class:'form-control'%>
        </div>
        <div class="form-group">
          <%= f.label :グループ画像 %>
          <br>
          <%= f.file_field :group_image, accept: "image/*", class: "form-control-file"  %>
        </div>
        <div class="form-group">
          <%= f.submit "Create Group", class:'btn btn-info' %>
        </div>
      <% end %>
    </div>
  </div>
</div>