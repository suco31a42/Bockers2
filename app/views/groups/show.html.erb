<div class="container px-5">
  <div class="row">
     <%= render 'layouts/errors', obj: @book %>
    <div class="col-md-3">
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>
      <h2 class="mt-3">New Book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Group Detail</h2>
      <div><%=link_to "グループを作成する",new_group_path %> | <%=link_to "グループ一覧",groups_path %></div>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>グループ名</th>
            <th>紹介文</th>
            <th></th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
            <tr>
              <td><%= image_tag @group.get_group_image(100,100) %></td>
              <th><%= @group.name %></th>
              <td><%= @group.introduction %></td>
              <% if @group.owner_id == current_user.id %>
                <td><%= link_to "Edit", edit_group_path(@group.id), class:"btn btn-sm btn-success" %></td>
                <td><%= link_to "Destroy", group_path(@group.id), class:"btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
              <% else %>
                <td></td>
                <td></td>
              <% end %>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
