<% if group.owner_id == current_user.id %>
  <%= link_to "Edit", edit_group_path(group.id), class:"btn btn-sm btn-success" %>
  <%= link_to "Destroy", group_path(group.id), class:"btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %>
<% elsif group.includesUser?(current_user) %>
  <%= link_to 'Leave this group', group_group_users_path(group), remote: true, method: :delete, class: "btn btn-sm btn-danger" %>
<% else %>
  <%= link_to 'Join this group', group_group_users_path(group), remote: true, method: :post, class: "btn btn-sm btn-success" %>
<% end %>