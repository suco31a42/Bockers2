<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="chat-container">
        <div class="chat-header">
          <h1><%= @user.name %>さんとのチャット</h1>
        </div>
        <div class="chat-messages">
          <% @chats.each do |chat| %>
            <% if chat.user_id == current_user.id %>
              <div class="outgoing-message">
                <div class="message-content">
                  <%= image_tag chat.user.get_profile_image, size: '50x50' %>
                  <%= chat.message %>
                </div>
                <div class="message-time">
                  <%= chat.created_at.strftime('%Y-%m-%d %H:%M:%S') %>
                </div>
              </div>
            <% else %>
              <div class="incoming-message">
                <div class="message-content">
                  <%= image_tag chat.user.get_profile_image, size: '50x50' %>
                  <%= chat.message %>
                </div>
                <div class="message-time">
                  <%= chat.created_at.strftime('%Y-%m-%d %H:%M:%S') %>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
        <div class="chat-input">
          <%= form_with model: @chat, local: false do |f| %>
            <div class="input-group">
              <%= f.text_area :message, placeholder: "メッセージを入力", class: "form-control" %>
              <div class="input-group-append">
                <%= f.submit "送信" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
