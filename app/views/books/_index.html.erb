<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th></th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td><%= link_to(book.user) do %>
          <%= image_tag book.user.get_profile_image, size: '50x50' %>
          <% end %>
        </td>
        <th><%= link_to book.title,book %></th>
        <td><%= book.body %></td>
        <td id="favorite-btn-<%= book.id %>"  class="table-sm">
          <%= render 'favorites/favorite_btn', book: book %>
        </td>
        <th>
          <% if book.category.present? %>
            <%= link_to book.category, tagsearches_search_path(content: book.category) %>
          <% end %>
        </th>
        <td><%= render 'books/star', book: book %></td>
        <td>PV:<%= book.read_counts.count %></td>
        <td><%= l book.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>