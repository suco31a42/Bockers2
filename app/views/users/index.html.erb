<div class="container px-5">
  <div class="row">
    <%= render 'layouts/errors', obj: @book %>
    <div class="col-md-3">
      <h2>User info</h2>
      <%= render 'users/info', current_user %>
      <h2 class="mt-3">New Book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    
    <%= render partial: "books/list", locals: { user: @user, book: @book } %>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
          <tr>
            <th>
            <%= image_tag user.get_profile_image(80,80) %>
            </th>
            <th>
            <%= content_tag :div, user.name, class: "text-secondary" %>
            </th>
            <th>
            <%= link_to "Show", user_path(user.id), class:"btn btn-sm btn-info"%>
            </th>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
