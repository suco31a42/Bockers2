<div class="container px-5">
  <div class="row">
    <%= render partial: "books/list", locals: { user: @user, book: @book } %>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
          <tr>
            <th>
            <%= image_tag user.get_profile_image(80,80) %>
            </th>
            <th>
            <%= user.name %>
            </th>
            <th>
            <%= link_to "Show", user_path(user.id)%>
            </th>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
