<div class="container">
  <div class="row">
    <div class="col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <%= render 'layouts/errors', obj: @user %>
      <h2>User info</h2>
        <div class="form-group">
          <%= f.label :name, "Name" %>
          <%= f.text_field :name, class:'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :profile_image, "Image" %>
          <br>
          <%= f.file_field :profile_image, accept: "image/*" %>
        </div>
        <div class="form-group">
          <%= f.label :introduction, "Introduction" %>
          <%= f.text_area :introduction, class:'form-control'%>
        </div>
        <div class="form-group">
          <%= f.submit "Update User", class:'btn btn-secondary' %>
        </div>
    </div>
  </div>
</div>
